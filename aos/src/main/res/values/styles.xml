<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListTextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">@dimen/default_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/default_horizontal_margin</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>